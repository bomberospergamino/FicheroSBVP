  <div class="wrap">
    <div class="topbar">
      <div class="brand">
        <!-- Sub√≠ tu logo al repo como logo.png -->
        <img src="logo.png" alt="Logo Bomberos Pergamino" />
        <div class="t">
          <div class="h">Bomberos Voluntarios</div>
          <div class="s">Pergamino ¬∑ Fichador Central</div>
        </div>
      </div>

      <div class="clock" aria-live="polite">
        <div class="date" id="dateStr">‚Äî</div>
        <div class="time" id="timeStr">‚Äî</div>
        <div class="tz">Argentina (AR)</div>
      </div>
    </div>

    <div class="panel">
      <div class="grid">
        <p class="title">Registro de Fichada</p>
        <p class="subtitle">Ingres√° tu legajo y seleccion√° <b>Entrada</b> o <b>Salida</b>.</p>

        <div class="legajoBox">
          <div class="legajoLabel">
            <span>Legajo</span>
            <span class="muted">solo n√∫meros</span>
          </div>

          <input
            id="legajo"
            inputmode="numeric"
            autocomplete="off"
            autocapitalize="off"
            spellcheck="false"
            placeholder="0000"
            aria-label="Legajo"
          />

          <div class="btnRow">
            <!-- Salida a la IZQUIERDA -->
            <button class="btn out" id="btnSalida" onclick="fichar('SALIDA')">
              ‚üµ SALIDA
            </button>
            <!-- Entrada a la DERECHA -->
            <button class="btn in" id="btnEntrada" onclick="fichar('INGRESO')">
              ENTRADA ‚ü∂
            </button>
          </div>

          <div class="toast" id="toast"></div>
        </div>

        <div class="footerRow" style="width:min(520px,100%);">
          <!-- Consultar estado abajo a la IZQUIERDA -->
          <button class="btn secondary" onclick="consultarEstado()">
            üîé CONSULTAR ESTADO
          </button>

          <div class="hint">
            Tip: tambi√©n pod√©s presionar <span class="kbd">Enter</span> para <b>Entrada</b>. (Y el legajo se limpia al finalizar.)
          </div>
        </div>
      </div>
    </div>
  </div>

<script>
  // ========= CONFIG =========
  const ENDPOINT = "https://script.google.com/macros/s/AKfycbzMSS1WIv2G53yu9jaWlianwsq2A6LEjlTY-pdnlD2b_awVtxNC7Il7AcnOxwTtNY_d/exec";
  const TZ = "America/Argentina/Buenos_Aires";

  // ========= CLOCK (Argentina) =========
  const fmtDate = new Intl.DateTimeFormat("es-AR", { timeZone: TZ, weekday:"long", year:"numeric", month:"2-digit", day:"2-digit" });
  const fmtTime = new Intl.DateTimeFormat("es-AR", { timeZone: TZ, hour:"2-digit", minute:"2-digit", second:"2-digit" });

  function tick(){
    const now = new Date();
    const d = fmtDate.format(now);
    const t = fmtTime.format(now);
    document.getElementById("dateStr").textContent = d.charAt(0).toUpperCase() + d.slice(1);
    document.getElementById("timeStr").textContent = t;
  }
  tick();
  setInterval(tick, 1000);

  // ========= UI helpers =========
  const $legajo = document.getElementById("legajo");
  const $toast = document.getElementById("toast");
  const $btnEntrada = document.getElementById("btnEntrada");
  const $btnSalida  = document.getElementById("btnSalida");

  function showToast(msg, type="ok"){
    $toast.className = `toast ${type}`;
    $toast.textContent = msg;
    $toast.style.display = "block";
    setTimeout(()=>{ $toast.style.display = "none"; }, 5200);
  }

  function setBusy(b){
    $btnEntrada.disabled = b;
    $btnSalida.disabled = b;
  }

  function cleanLegajo(){
    $legajo.value = "";
    $legajo.focus();
  }

  function onlyDigits(s){ return /^\d+$/.test(s); }

  // Enter = Entrada
  $legajo.addEventListener("keydown", (e)=>{
    if(e.key === "Enter"){
      e.preventDefault();
      fichar("INGRESO");
    }
  });

  async function getIP(){
    // IP externa (se√±al, no ‚Äúprueba absoluta‚Äù)
    try{
      const r = await fetch("https://api.ipify.org?format=json", {cache:"no-store"});
      const j = await r.json();
      return j.ip || "";
    }catch(e){
      return "";
    }
  }

  // ========= ACTIONS =========
  async function fichar(movimiento){
    const legajo = ($legajo.value || "").trim();

    if(!onlyDigits(legajo)){
      showToast("Legajo inv√°lido. Us√° solo n√∫meros.", "err");
      return;
    }

    setBusy(true);
    showToast("Registrando fichada‚Ä¶", "ok");

    const ip = await getIP();

    const payload = {
      legajo,
      movimiento,                 // "INGRESO" o "SALIDA"
      ip_externa: ip,
      user_agent: navigator.userAgent
    };

    try{
      const res = await fetch(ENDPOINT, {
        method: "POST",
        headers: {"Content-Type":"application/json"},
        body: JSON.stringify(payload)
      });

      const j = await res.json().catch(()=>({ok:false,error:"Respuesta inv√°lida del servidor"}));

      if(!j.ok){
        showToast(`Error: ${j.error || "desconocido"}`, "err");
      }else{
        const p = j.persona || {};
        const nombre = [p.apellido, p.nombre].filter(Boolean).join(", ");
        const extra = nombre ? ` ¬∑ ${nombre}${p.grado ? " ("+p.grado+")" : ""}` : "";
        showToast(`OK: ${legajo} ¬∑ ${movimiento}${extra}`, "ok");
      }
    }catch(err){
      showToast(`Error de red: ${String(err)}`, "err");
    }finally{
      // Requisito: limpiar legajo despu√©s de tocar botones
      cleanLegajo();
      setBusy(false);
    }
  }

  async function consultarEstado(){
    const legajo = ($legajo.value || "").trim();
    if(!onlyDigits(legajo)){
      showToast("Para consultar estado, ingres√° un legajo num√©rico.", "err");
      return;
    }

    setBusy(true);
    showToast("Consultando estado‚Ä¶", "ok");

    // IMPORTANTE:
    // Este endpoint necesita soportar GET action=estado&legajo=XXXX.
    // Si todav√≠a no lo agregaste, abajo te dejo el snippet para Apps Script.
    try{
      const url = `${ENDPOINT}?action=estado&legajo=${encodeURIComponent(legajo)}`;
      const res = await fetch(url, {cache:"no-store"});
      const j = await res.json().catch(()=>({ok:false,error:"Respuesta inv√°lida del servidor"}));

      if(!j.ok){
        showToast(`Error: ${j.error || "desconocido"}`, "err");
      }else{
        // Respuesta esperada: {ok:true, estado:"DENTRO/FUERA", ultimo_movimiento:"INGRESO/SALIDA", ultimo_timestamp:"..."}
        const estado = j.estado || "‚Äî";
        const mov = j.ultimo_movimiento || "‚Äî";
        const ts  = j.ultimo_timestamp ? new Date(j.ultimo_timestamp).toLocaleString("es-AR") : "‚Äî";
        showToast(`Estado: ${estado} ¬∑ √öltimo: ${mov} ¬∑ ${ts}`, "ok");
      }
    }catch(err){
      showToast(`Error de red: ${String(err)}`, "err");
    }finally{
      // Ac√° NO limpio el legajo, porque est√° consultando (vos decid√≠s).
      setBusy(false);
    }
  }

  // UX: foco directo al cargar
  window.addEventListener("load", ()=> $legajo.focus());
</script>
</body>
</html>
